---
import BaseLayout from "@/layouts/BaseLayout.astro";
import TagSection, { title } from "@/features/tags/index";
import { extractTagsFromContents } from "@/_utils/tags";

const allContent = await Astro.glob("../../content/**/*.md");
const tags = extractTagsFromContents(allContent);
---

<BaseLayout title={title}>
  <TagSection tags={tags} />
</BaseLayout>
