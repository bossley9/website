---
import BaseLayout from '@/layouts/BaseLayout.astro'
import { TagSection } from '@/features/tags/TagSection'
import { extractTagsFromContents } from '@/utils/tags'

const allContent = await Astro.glob('../../content/**/*.md')
const tags = extractTagsFromContents(allContent)
---

<BaseLayout title="Tag Index">
  <TagSection tags={tags} />
</BaseLayout>
