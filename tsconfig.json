{
  "extends": "astro/tsconfigs/strictest",
  "exclude": ["node_modules", "dist", "static"],
  "compilerOptions": {
    "noImplicitAny": true,
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "allowJs": false,
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"],
      "@static/*": ["static/*"]
    },
    "resolveJsonModule": true,
    "strict": true
  }
}
