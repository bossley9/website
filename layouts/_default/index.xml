{{ printf "<?xml version=\"1.0\" encoding=\"utf-8\"?>" | safeHTML }}
<feed xmlns="http://www.w3.org/2005/Atom">
  <title>{{ .Site.Params.siteName }}</title>
  <subtitle>{{ .Site.Params.siteDesc }}</subtitle>
  <link href="{{ .Site.BaseURL }}/feed.xml" rel="self"/>
  <link href="{{ .Site.BaseURL }}/"/>
  <updated>{{ now.Format "Mon, 02 Jan 2006 15:04:05 -0700" | safeHTML }}</updated>
  <id>{{ .Site.BaseURL }}/</id>
  <author>
    <name>{{ .Site.Params.author }}</name>
    <email>{{ .Site.Params.email }}</email>
  </author>
  {{ with .Site.GetPage "/thoughts" }}
    {{ range .Pages | first 25 }}
      <entry>
        <title>{{ .Title }}</title>
        <link href="{{ .Permalink }}"/>
        <updated>{{ .Date.Format .Site.Params.feedFormat | safeHTML }}</updated>
        <id>{{ .Permalink }}</id>
        <content type="html">
          {{ .Content | htmlUnescape | safeHTML | htmlEscape }}
        </content>
      </entry>
    {{ end }}
  {{ end }}
</feed>
